<!-- @version $Id: applicationContext.xml 561608 2007-08-01 00:33:12Z vgritsenko $ -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!--配置自动包扫描-->
    <context:component-scan base-package="com.tree.*"/>

    <!--此处要主要被AOP所代理的是接口的情况，且proxy-target-class=false的情况下是使用的是JDK动态代理
        如果proxy-target-class=true的情况下是使用的是cglibd代理
        如果被AOP所代理的不是接口的的情况，则使用的是cglib代理
    -->
    <aop:aspectj-autoproxy proxy-target-class="true"/>

</beans>
